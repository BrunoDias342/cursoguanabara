# faça um programa que leia um angulo qualquer e mostre na tela o valor do seno
# cosseno e tangente desse angulo

import math

angulo = float(input(" diga o angulo do calculo! "))

seno = math.sin(math.radians(angulo))
cosseno = math.cos(math.radians(angulo))
tangente = math.tan(math.radians(angulo))

print(f" para o angulo de {angulo}, o seno é {seno:.2f}, cosseno {cosseno:.2f} e tangente {tangente:.2f} ")
