# desenvolva um programa que leia as duas notas de um aluno e calcule sua media 

nome = input("Digite o nome do aluno ")
n1 = float(input("Digite a primeira nota do {} [0/10] " .format(nome)))
n2 = float(input("Digite a segunda nota do {} [0/10] " .format(nome)))
media = (n1 + n2) / 2


if media >= 7 :
   print("Parabens {}, voce esta acima da media, sua nota foi {}" .format( nome, media))

elif media < 7 :
    print("voce esta abaixo da media, sua nota foi {} " .format ( media))

elif media <= 4 :
    print("voce esta de recuperaÃ§ao, sua nota foi {} " .format( media))
